{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "version": "0.0.2-alpha.1",
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "chore(release): publish %s"
    }
  }
}
