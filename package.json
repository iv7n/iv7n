{
  "name": "iv7n",
  "private": true,
  "version": "0.0.0-alpha.0",
  "workspaces": [
    "packages/*"
  ],
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iv7n/iv7n.git"
  },
  "scripts": {
    "format": "prettier --write --parser typescript  \"packages/**/*.(t|j)s?(x)\"",
    "cz": "cz",
    "init-cz": "commitizen init cz-conventional-changelog --yarn --dev --exact --force",
    "dev": "node scripts/dev.js",
    "build": "node scripts/build.js -t",
    "release": "node scripts/release.js --skipTests",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "preinstall": "node ./scripts/checkYarn.js",
    "postinstall": "husky install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "yeojongki <yeojongki@foxmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@microsoft/api-extractor": "^7.13.1",
    "@rollup/plugin-babel": "^5.2.3",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "chalk": "^4.1.0",
    "commitizen": "^4.2.3",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "execa": "^5.0.0",
    "husky": "^5.0.9",
    "lerna": "^3.22.1",
    "minimist": "^1.2.5",
    "prettier": "^2.2.1",
    "prettier-quick": "^0.0.5",
    "rollup": "^2.38.5",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-scss": "^2.6.1",
    "rollup-plugin-typescript2": "^0.29.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}